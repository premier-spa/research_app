<!-- デザイン用 -->
<div class="row">
  <div class="col s12">
    <h3>Works</h3>
  </div>
  <div class="col s12">
    <% @works.each do |work| %>
      <div class="col s12">
        <div class="card horizontal hoverable">
          <div class="card-image">
            <img src="">image
          </div>
          <div class="card-content">
            <span>
              <%= work.name %>
            </span>
            <p><%= work.description %></p>
          </div>
          <div class="card-action">
            <%= link_to '詳細', lab_work_path(@lab, work) %>
            <%= link_to '研究内容編集', edit_lab_work_path(@lab, work) %>
            <%= link_to '研究内容削除', lab_work_path(@lab, work), method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>



<p id="notice"><%= notice %></p>

<h1>Works</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @works.each do |work| %>
      <tr>
        <td><%= work.name %></td>
        <td><%= work.description %></td>
        <td><%= link_to '研究内容詳細', lab_work_path(@lab, work) %></td>
        <td><%= link_to '研究内容編集', edit_lab_work_path(@lab, work) %></td>
        <td><%= link_to '研究内容削除', lab_work_path(@lab, work), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

