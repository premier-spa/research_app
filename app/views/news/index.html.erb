<!-- デザイン用 -->



<div class="row">
  <div class="col s12">
    <h3>News</h3>
  </div>
  <div class="col s12">
    <% @news.each do |news| %>
      <div class="col s12">
        <div class="card horizontal hoverable">
          <div class="card-image">
            <!-- テーブルから読み込む予定 -->
            <img class="responsive-img" src="./../../news.png">
          </div>
          <div class="card-stacked">
            <div class ="card-content">
              <!-- テーブルから読み込む予定 -->
              <div class="col s10">
                <div class="card-title">
                  <%= news.title %>
                </div>
                <p><%= news.description %></p>
                <p><%= news.release_date %></p>
                <p><%= news.category.name %></p>
              </div>
              <div class="col s2">
                <img class="responsive-img z-depth-2 circle" src="./../../student-icon.png">
              </div>
            </div>
            <div class="card-action">
              <%= link_to '詳細', lab_news_path(@lab, news) %>
              <%= link_to '編集', edit_lab_news_path(@lab, news) %>
              <%= link_to '削除', lab_news_path(@lab, news), method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div id ="swipeable">
<ul id="tabs-swipe-demo" class="tabs">
  <li class="tab col s3"><a class="active" href="#swipe-1">Test 1</a></li>
  <li class="tab col s3"><a href="#swipe-2">Test 2</a></li>
  <li class="tab col s3"><a href="#swipe-3">Test 3</a></li>
</ul>
<div class="tabs-content">
<div id="swipe-1" class="col s12 blue">Test 1</div>
<div id="swipe-2" class="col s12 red">Test 2</div>
<div id="swipe-3" class="col s12 green">Test 3</div>
</div>
</div>


<p id="notice"><%= notice %></p>

<h1>News</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Release date</th>
      <th>Category</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @news.each do |news| %>
      <tr>
        <td><%= news.title %></td>
        <td><%= news.description %></td>
        <td><%= news.release_date %></td>
        <td><%= news.category.name %></td>
        <td><%= link_to 'ニュース詳細へ', lab_news_path(@lab, news) %></td>
        <td><%= link_to 'ニュース編集へ', edit_lab_news_path(@lab, news) %></td>
        <td><%= link_to 'ニュース削除', lab_news_path(@lab, news), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

