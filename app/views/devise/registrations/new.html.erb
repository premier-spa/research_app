<h4>Sign up</h4>

<div class="row">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

  <!-- 全ユーザに共通の要素(Companyは考慮していない) -->
    <div class="row">
      <div class="col s12">
        <div class="card col s12">
          <div class="input-field col s12">
            <i class="material-icons prefix">email</i>
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="input-field col s12">
            <div class="col s6">
              <i class="material-icons prefix">person</i>
              <%= f.label :last_name %>
              <%= f.text_field :last_name %>
            </div>
            <div class="col s6">
              <%= f.label :first_name %>
              <%= f.text_field :first_name %>
            </div>
          </div>

          <div class="input-field col s12">
            <i class="material-icons prefix">vpn_key</i>
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="input-field col s12">
            <i class="material-icons prefix">vpn_key</i>
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="input-field col s12">
            <p><i class="material-icons prefix">settings</i>
            <%= f.label :type %></p>
            <%= f.select :type, User.types.keys %>
          </div>

          <div class="input-field col s12">
            <i class="material-icons prefix">edit</i>
            <%= f.label :description %>
            <%= f.text_field :description %>
          </div>

          <div class="input-field col s12">
            <p><i class="material-icons prefix">tag_faces</i>
            <%= f.label :image %></p>
            <%= f.file_field :image %>
          </div>
        </div>
      </div>
    </div>


    <!-- For Student -->
    <div class="row">
      <div class="col s12">
        <div class="card col s12">
          <div class="input-field col s12">
            <i class="material-icons prefix">details</i>
            <%= f.label :grade %>
            <%= f.text_field :grade, class: "materialize-textarea" %>
          </div>

          <div class="input-field col s12">
            <i class="material-icons prefix">star</i>
            <%= f.label :self_promotion %>
            <%= f.text_area :self_promotion, class: "materialize-textarea" %>
          </div>

          <div class="input-field col s12">
            <i class="material-icons prefix">laptop</i>
            <%= f.label :skill %>
            <%= f.text_area :skill, class: "materialize-textarea" %>
          </div>

          <div class="input-field col s12">
            <i class="material-icons prefix">details</i>
            <%= f.label :quolification %>
            <%= f.text_area :quolification, class: "materialize-textarea" %>
          </div>

          <div class="input-field col s12">
            <i class="material-icons prefix">details</i>
            <%= f.label :theme %>
            <%= f.text_area :theme, class: "materialize-textarea" %>
          </div>

          <div class="input-field col s12">
            <i class="material-icons prefix">details</i>
            <%= f.label :abstract %>
            <%= f.text_area :abstract, class: "materialize-textarea" %>
          </div>

          <div class="input-field col s12">
            <i class="material-icons prefix">business</i>
            <%= f.label :part_time_job %>
            <%= f.text_area :part_time_job, class: "materialize-textarea" %>
          </div>

          <div class="input-field col s12">
            <i class="material-icons prefix">business</i>
            <%= f.label :internship %>
            <%= f.text_area :internship, class: "materialize-textarea" %>
          </div>
        </div>
      </div>
    </div>

    <!-- For Professor -->
    <div class="row">
      <div class="col s12">
        <div class="card col s12">
          <div class="input-field col s12">
            <i class="material-icons prefix">stars</i>
            <%= f.label :position %>
            <%= f.text_field :position %>
          </div>

          <div class="input-field col s12">
            <i class="material-icons prefix">business_center</i>
            <%= f.label :career %>
            <%= f.text_area :career, class: "materialize-textarea" %>
          </div>
        </div>
      </div>
    </div>

    <!-- Submit -->
    <div class="row">
      <div class="actions col s12">
        <%= f.submit "Sign up" , class: "btn grey-text text-darken-2 white" %>
      </div>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
