<h4>Sign up</h4>

<div class="row">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

  <!-- 全ユーザに共通の要素(Companyは考慮していない) -->
    <div class="row" id = "common_info">
      <div class="col s12">
        <div class="card col s12">
          <div class="input-field col s12">
            <i class="material-icons prefix">email</i>
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="input-field col s12">
            <div class="col s6">
              <i class="material-icons prefix">person</i>
              <%= f.label :last_name %>
              <%= f.text_field :last_name %>
            </div>
            <div class="col s6">
              <%= f.label :first_name %>
              <%= f.text_field :first_name %>
            </div>
          </div>

          <div class="input-field col s12">
            <i class="material-icons prefix">vpn_key</i>
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="input-field col s12">
            <i class="material-icons prefix">vpn_key</i>
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="input-field col s12">
            <p><i class="material-icons prefix">settings</i>
            <%= f.label :type %></p>
            <%= f.select :type, User.types.keys %>
          </div>
<!-- 
          <div class="input-filed col s12">
            <p><i class="material-icons prefix">school</i>
            <%= f.label :major %>
            <%= f.collection_select :major_id, Major.all, :id, :name %>
          </div> -->

          <div class="input-field col s12">
            <i class="material-icons prefix">edit</i>
            <%= f.label :description %>
            <%= f.text_field :description %>
          </div>

          <div class="input-field col s12">
            <p><i class="material-icons prefix">account_circle</i>
            <%= f.label :image %></p>
            <%= f.file_field :image %>
          </div>
        </div>
      </div>
    </div>

    <!-- Submit -->
    <div class="row">
      <div class="actions col s12">
        <%= f.submit "Sign up" , class: "btn grey-text text-darken-2 white" %>
      </div>
    </div>
  <% end %>
</div>

<script>
  var user_type
  // 読み込み時
  $(document).ready(function() {
    // create current user_type form
    user_type = document.getElementById("user_type").value;
    if(user_type == 'Student') {
      $('#common_info').after("<%= j(render 'form_student', resource: resource) %>");
    }else if(user_type == 'Professor') {
      $('#common_info').after("<%= j(render 'form_professor', resource: resource) %>");
    }else if(user_type == 'Company'){
    }
  });

  // user_typeの変更時
  $('#user_type').change(function() {
    // delete previous user_type form
    if(user_type == 'Student') {
      document.getElementById('student_info').remove();
    }else if(user_type == 'Professor') {
      document.getElementById('professor_info').remove();
    }else if(user_type == 'Company'){
    }

    // create current user_type form
    user_type = document.getElementById("user_type").value;
    if(user_type == 'Student') {
      $('#common_info').after("<%= j(render 'form_student', resource: resource) %>");
    }else if(user_type == 'Professor') {
      $('#common_info').after("<%= j(render 'form_professor', resource: resource) %>");
    }else if(user_type == 'Company'){
    }
});
</script>

