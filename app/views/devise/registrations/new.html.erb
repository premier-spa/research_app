<h4>Sign up</h4>

<div class="row">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

  <!-- 全ユーザに共通の要素(Companyは考慮していない) -->
    <div class="input-field col s12">
      <i class="material-icons prefix">email</i>
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="input-field col s12">
      <i class="material-icons prefix">vpn_key</i>
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="input-field col s12">
      <i class="material-icons prefix">vpn_key</i>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="input-field col s12">
      <p><i class="material-icons prefix">settings</i>
      <%= f.label :type%></p>
      <%= f.select :type, User.types.keys %>
    </div>

    <div class="input-field col s12">
      <div class="col s6">
      <i class="material-icons prefix">face</i>
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
      </div>
      <div class="col s6">
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
      </div>
    </div>

    <div class="input-field col s12">
      <i class="material-icons prefix">edit</i>
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>

    <div class="input-field col s12">
      <p><i class="material-icons prefix">tag_faces</i>
      <%= f.label :image %></p>
      <%= f.file_field :image%>
    </div>


    <!-- For Student -->
    <div class="input-field col s12">
      <i class="material-icons prefix">star</i>
      <%= f.label :self_promotion %>
      <%= f.text_area :self_promotion, class: "materialize-textarea"%>
    </div>

    <!-- For Professor -->

    <div class="row">
      <div class="actions col s12">
        <%= f.submit "Sign up" , class: "btn grey-text text-darken-2 white" %>
      </div>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
