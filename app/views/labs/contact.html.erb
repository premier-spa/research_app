<div style="height: 40px;">
</div>
<h4>お問い合わせ</h4>
<div class="row">
    <div class="col s12">
        <div class="col s12">
            <div class="card hoverable">
                <div class="card-content collection">
                    <a href="#" class="collection-item">所在地:
                        <%= @lab.address %>
                    </a>
                    <a href="#" class="collection-item">電話番号:
                        <%=@lab.tel %>
                    </a>
                    <a href="#" class="collection-item">Fax:
                        <%= @lab.fax %>
                    </a>
                    <a href="#" class="collection-item">Emal:
                        <%= @lab.email %>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="col s12">
        <h4>学生へのメッセージ</h4>
    </div>
    <div class="col s12">
        <div class="col s12">
            <div class="card horizontal hoverable">
                <div class="card-content">
                    <%= @lab.message %>
                </div>
            </div>
        </div>
    </div>
    <div class="col s12">
        <h4>研究室所在地</h4>
    </div>
    <div class="col s12">
        <div class="col s12">
            <div class="card horizontal hoverable">
                <div id="map" style="width: 100%; height: 400px;"></div>
            </div>
        </div>
    </div>
</div>

<script>
    var centerObj = {
        lat: <%= @lab.lat %>,
        lng: <%= @lab.lon %>
    }

    function initMap() {
        var map = new google.maps.Map(document.getElementById('map'), { // #sampleに地図を埋め込む
            center: centerObj,
            zoom: 15 // 地図のズームを指定
        });
        var marker = new google.maps.Marker({
            position: centerObj,
            map: map,
            title: '<%= @lab.name %>'
        });
    }
</script>
<script async defer src="<%= @map_script_path %>" type="text/javascript"></script>