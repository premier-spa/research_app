<div class="card horizontal hoverable">
  <div class="card-image">
    <!-- テーブルから読み込む予定 -->
    <!-- imagefileにカード内写真の場所を入力-->
    <img class="responsive-img" src= <%= imagefile %> style="width: 200px; height: auto; object-fit: cover">
  </div>

  <div class="card-stacked">
    <div class ="card-content">
      <div class="card-title">
        <h4> <%= title %> </h4>
      </div>
      <% if current_user.image.attached? %>
        <%= image_tag current_user.image, class: "responsive-img z-depth-1 right circle", style: "width: 64px; height: 64px; object-fit: cover;" %>
      <% end %>
    </div>
    <h5><%= sentence %></h5>
  </div>
</div>